<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'> 
<link rel="stylesheet" type="text/css" runat="server" media="screen" href="~/css/styles.css" />
@using Packs.Models;

<h1>The Things that you need to pack:</h1>
@if (Model.Count == 0)
{
  <p>There are no items left to pack!</p>
}
<ul>
  @foreach (Tracking item in Model)
  {
    <li>@item.ItemName, @item.Id</li>
  }
</ul>

<form action="/things/itemDelete" method="post">
  <label for="searchID">Delete an item  by ID:</label>
  <input id="searchID" name="searchID" type="text">
  <button type="submit">Submit</button>
</form>

<a href="/things/new">Add a new item.</a>

